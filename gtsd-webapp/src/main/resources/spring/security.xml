<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security" xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<global-method-security pre-post-annotations="enabled">
		<!-- AspectJ pointcut expression that locates our "post" method and applies security that way <protect-pointcut expression="execution(* bigbank.*Service.post*(..))" access="ROLE_TELLER"/> -->
	</global-method-security>

	<http auto-config="true" use-expressions="true">
		<intercept-url pattern="/**" access="permitAll" />
		<intercept-url pattern="/admin/login*" access="permitAll" />
		<intercept-url pattern="/admin/logout*" access="permitAll" />
		<intercept-url pattern="/admin/timeout*" access="permitAll" />
		<form-login login-page="/admin/login.jsp" default-target-url="/admin/login.jsp?result=true" authentication-failure-url="/admin/login.jsp?result=false" />
		<logout logout-success-url="/admin/logout.jsp" invalidate-session="true" />
		<remember-me key="gtsd" />

	</http>
	
	<authentication-manager>
		<authentication-provider>
			<user-service>
				<user name="username" password="password" authorities="ROLE_USER" />
			</user-service>
		</authentication-provider>
	</authentication-manager>

</beans:beans>